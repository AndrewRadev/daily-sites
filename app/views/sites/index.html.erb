<h1>Listing sites</h1>

<table>
  <tr>
    <td>Site</td>
    <td>Days</td>

    <td></td>
    <td></td>
    <td></td>
  </tr>

  <% @sites.each do |site| %>
    <tr>
      <td class="site">
        <%= link_to site.title, site.url, :target => '_newtab' %>
      </td>
      <td><%= site.day_names %></td>
      <td><%= link_to 'Show', site %></td>
      <td><%= link_to 'Edit', edit_site_path(site) %></td>
      <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

