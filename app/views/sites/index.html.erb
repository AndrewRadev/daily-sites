<% javascript 'open_links' %>

<h1>Listing sites</h1>

<%= link_to 'Open links', '#', :id => 'open-links' %>

<table>
  <tr>
    <th>Site</th>
    <th>Days</th>

    <th></th>
    <th></th>
  </tr>

  <% @sites.each do |site| %>
    <tr class="<%= cycle('alt', '') %>">
      <td class="site">
        <%= link_to site.title, site.url, :target => '_newtab', :class => 'js-link' %>
      </td>
      <td><%= site.day_names %></td>
      <td><%= link_to 'Edit', edit_site_path(site) %></td>
      <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New site', new_site_path %> |
<%= link_to 'All sites', all_sites_path %>
