<%= form_for(@site, html: {class: 'form-horizontal'}) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: 'control-label col-xs-1' %>
    <div class="col-xs-11">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: 'control-label col-xs-1' %>
    <div class="col-xs-11">
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :days, class: 'control-label col-xs-1' %>

    <div class="checkbox col-xs-11">
      <label><%= f.check_box :monday    %> Monday    </label><br>
      <label><%= f.check_box :tuesday   %> Tuesday   </label><br>
      <label><%= f.check_box :wednesday %> Wednesday </label><br>
      <label><%= f.check_box :thursday  %> Thursday  </label><br>
      <label><%= f.check_box :friday    %> Friday    </label><br>
      <label><%= f.check_box :saturday  %> Saturday  </label><br>
      <label><%= f.check_box :sunday    %> Sunday    </label><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-1 col-xs-11">
      <%= f.submit class: 'btn btn-primary' %>
      <% if @site.persisted? %>
        <%= link_to 'Show', @site.url, target: '_newtab', class: 'btn btn-default' %>
      <% end %>
      <%= link_to 'Back', sites_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
