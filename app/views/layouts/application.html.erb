<!DOCTYPE html>
<html>
  <head>
    <title>Daily Sites</title>

    <%= css3buttons_stylesheets :include_reset => false %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>

    <%= yield(:head) %>
  </head>

  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <div class="right">
        <% if logged_in? %>
          Signed in as <%= current_user.name %>.

          <br />

          <% button_group do %>
            <%= button_link_to 'View profile', profile_path %>
            <%= button_link_to 'Sign out', sign_out_path %>
          <% end %>
        <% end %>
      </div>

      <%= content_tag :h1, yield(:title) if show_title? %>

      <%= yield %>
    </div>
  </body>
</html>
